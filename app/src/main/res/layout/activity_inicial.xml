<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:background="@drawable/fondo_inicial"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dialogo_combate"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/dialogo_batalla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_aceptar" />

    <TextView
        android:id="@+id/textoProfesor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Bienvenido/a al mundo Pokémon. Por favor, escoge tu pokémon inicial. elige sabiamente"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/boton_aceptar" />

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/icono_inicial"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="140dp"
        app:indicatorVisibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        app:radius="0dp"
        app:slideInterval="0"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/nombreInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto Aquí"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/icono_inicial" />

    <ImageView
        android:id="@+id/boton_atras_mochila"
        android:layout_width="@dimen/buttons_size"
        android:layout_height="@dimen/buttons_size"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_bg"
        android:elevation="8dp"
        android:src="@drawable/ic_prev"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icono_inicial" />

    <ImageView
        android:id="@+id/boton_siguiente"
        android:layout_width="@dimen/buttons_size"
        android:layout_height="@dimen/buttons_size"
        android:layout_margin="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_bg"
        android:elevation="8dp"
        android:src="@drawable/ic_next"
        app:layout_constraintEnd_toEndOf="@+id/icono_inicial"
        app:layout_constraintTop_toBottomOf="@+id/icono_inicial" />

    <ImageView
        android:id="@+id/boton_aceptar"
        android:layout_width="@dimen/buttons_size"
        android:layout_height="@dimen/buttons_size"
        android:layout_marginTop="27dp"
        android:background="@drawable/button_bg"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icono_inicial" />


</androidx.constraintlayout.widget.ConstraintLayout>