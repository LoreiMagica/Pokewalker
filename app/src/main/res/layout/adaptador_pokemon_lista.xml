<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_pokedex"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imagenObjeto"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/p_desconocido" />

            <TextView
                android:id="@+id/nombreObjeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/imagenObjeto"
                android:maxLines="2"
                android:text="Missigno"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textoCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombreObjeto"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/numeroCantidad"
                android:text="Nv " />

            <TextView
                android:id="@+id/numeroCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textoCantidad"
                android:layout_alignBottom="@+id/textoCantidad"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_toLeftOf="@+id/textoSgNv"
                android:text="0" />

            <TextView
                android:id="@+id/textoSgNv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/numeroCantidad"
                android:layout_alignBottom="@+id/numeroCantidad"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@+id/siguienteNv"
                android:text="Siguiente Nv: " />

            <TextView
                android:id="@+id/siguienteNv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iconoVida"
                android:layout_alignBottom="@+id/iconoVida"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:text="10" />

            <ImageView
                android:id="@+id/iconoVida"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/numeroCantidad"
                android:layout_alignBottom="@+id/numeroCantidad"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/imagenObjeto"
                android:src="@drawable/puntos_vida" />

            <TextView
                android:id="@+id/puntosVida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iconoVida"
                android:layout_alignBottom="@+id/iconoVida"
                android:layout_toEndOf="@+id/iconoVida"
                android:text="3" />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
